{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region": "us-west-2",
        "vpc_id": "{{ aws_secretsmanager `path/to/secret` `vpc_id` }}",
        "subnet_id": "{{ aws_secretsmanager `path/to/secret` `subnet_id` }}",
        "instance_size": "t3.medium",
        "source_ami": "",
        "iam_role": "{{ aws_secretsmanager `path/to/secret` `iam_role` }}",
        "security_group_id": "{{ aws_secretsmanager `path/to/secret` `security_group_id` }}",
        "winrm_username": "Administrator"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{ user `aws_access_key` }}",
            "secret_key": "{{ user `aws_secret_key` }}",
            "region": "{{user `region`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "encrypt_boot": true,
            "iam_instance_profile": "{{user `iam_role`}}",
            "source_ami_filter": {
                "filters": {
                    "name": "Windows_Server-2019-English-Full-Base-*",
                    "root-device-type": "ebs",
                    "virtualization-type": "hvm"
                },
                "most_recent": true,
                "owners": [
                    "801119661308"
                ]
            },
            "ami_name": "kagrportal-base-{{timestamp}}",
            "instance_type": "{{user `instance_size`}}",
            "user_data_file": "../resources/winrm_https_setup.ps1",
            "associate_public_ip_address": true,
            "communicator": "winrm",
            "winrm_username": "{{user `winrm_username`}}",
            "winrm_port": 5986,
            "winrm_timeout": "5m",
            "winrm_use_ssl": true,
            "winrm_insecure": true
            
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "script": "example_setup_script.ps1"
        }    
    ]
}
